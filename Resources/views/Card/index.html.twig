{% extends 'SlotMachineSlotBundle::layout.html.twig' %}

{% block body %}
<h1>Card list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Reelindex</th>
            <th>Value</th>
            <th>Alias</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('card_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.reelIndex }}</td>
            <td>{{ entity.value }}</td>
            <td>{{ entity.alias }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('card_show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('card_edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('card_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
